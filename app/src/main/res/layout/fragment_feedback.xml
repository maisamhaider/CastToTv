<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="feedback"
            type="com.example.casttotv.ui.fragments.FeedbackFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimaryVariant">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{()->feedback.back()}"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toTopOf="@+id/guideline47"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="@+id/guideline105"
            app:layout_constraintTop_toTopOf="@+id/guideline40"
            app:srcCompat="@drawable/ic_arrow_back" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView39"
            style="@style/header_text_3"
            android:layout_marginStart="@dimen/dp_4"
            android:text="@string/send_feedback"
            app:layout_constraintBottom_toTopOf="@+id/guideline107"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageview_back"
            app:layout_constraintTop_toTopOf="@+id/guideline106" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/header_text_3"
            android:text="@string/please_write_your_feedback"
            android:textStyle="bold"
            app:cardElevation="@dimen/dp_2"
            app:layout_constraintBottom_toTopOf="@+id/guideline228"
            app:layout_constraintEnd_toStartOf="@+id/guideline226"
            app:layout_constraintStart_toStartOf="@+id/guideline105"
            app:layout_constraintTop_toTopOf="@+id/guideline227" />

        <com.google.android.material.card.MaterialCardView
            style="@style/card_view_0_0"
            app:layout_constraintBottom_toTopOf="@+id/guideline230"
            app:layout_constraintEnd_toStartOf="@+id/guideline226"
            app:layout_constraintStart_toStartOf="@+id/guideline105"
            app:layout_constraintTop_toTopOf="@+id/guideline229">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary"
                android:fontFamily="@font/ubuntu"
                android:hint="@string/type_here"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="top" />
            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/card_view_0_0"
            app:cardElevation="@dimen/dp_2"
            app:layout_constraintBottom_toTopOf="@+id/guideline232"
            app:layout_constraintEnd_toStartOf="@+id/guideline226"
            app:layout_constraintStart_toStartOf="@+id/guideline105"
            app:layout_constraintTop_toTopOf="@+id/guideline231">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary"
                android:fontFamily="@font/ubuntu"
                android:hint="@string/enter_your_email_optional"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    style="@style/w_m_h_m"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/ubuntu"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            style="@style/w_0_h_0"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/guideline234"
            app:layout_constraintEnd_toStartOf="@+id/guideline226"
            app:layout_constraintStart_toStartOf="@+id/guideline105"
            app:layout_constraintTop_toTopOf="@+id/guideline233"
            tools:listitem="@layout/feedback_item" />


        <com.google.android.material.textview.MaterialTextView
            style="@style/w_0_h_0_auto_sizing_font"
            android:text="@string/system_info"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintBottom_toTopOf="@+id/guideline236"
            app:layout_constraintEnd_toStartOf="@+id/guideline226"
            app:layout_constraintStart_toStartOf="@+id/guideline105"
            app:layout_constraintTop_toTopOf="@+id/guideline235" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_send"
            style="@style/w_0_h_0"
            android:background="@drawable/ripple_curved_gradient_button_drawable"
            app:layout_constraintBottom_toTopOf="@+id/guideline195"
            app:layout_constraintEnd_toStartOf="@+id/guideline189"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline192"
            app:layout_constraintTop_toTopOf="@+id/guideline194"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_text"
            style="@style/header_text_3"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="@color/cr_white"
            app:layout_constraintBottom_toTopOf="@+id/guideline198"
            app:layout_constraintEnd_toStartOf="@+id/guideline189"
            app:layout_constraintStart_toStartOf="@+id/textview_send"
            app:layout_constraintTop_toTopOf="@+id/guideline197"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline194"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.83" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline195"
            android:layout_width="wrap_content"
