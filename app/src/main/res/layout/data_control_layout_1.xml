<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="browserVM"
            type="com.example.casttotv.viewmodel.BrowserViewModel" />

        <variable
            name="dataControlActivity"
            type="com.example.casttotv.ui.activities.browser.DataControlActivity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryVariant">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_clear_cache"
            style="@style/w_0_h_0"
            android:onClick='@{()->browserVM.putPrefs("DATA_CLEAR_CACHE",!browserVM.getPrefs("DATA_CLEAR_CACHE",false))}'
            app:layout_constraintBottom_toTopOf="@+id/cl_clear_history"
            app:layout_constraintDimensionRatio="w,10:1.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/view9"
                android:layout_width="@dimen/dp_6"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/cr_dodger_blue_light_1"
                app:layout_constraintBottom_toTopOf="@+id/guideline500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline504" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView49"
                style="@style/header_text_view"
                android:layout_marginStart="@dimen/dp_20"
                android:text="@string/clear_cache"
                app:layout_constraintBottom_toTopOf="@+id/guideline502"
                app:layout_constraintEnd_toStartOf="@+id/checkbox_clear_cache"
                app:layout_constraintStart_toEndOf="@+id/view9"
                app:layout_constraintTop_toTopOf="@+id/guideline503" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView48"
                style="@style/subheading_w0_h0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:text="@string/clear_all_cache"
                app:layout_constraintBottom_toTopOf="@+id/guideline499"
                app:layout_constraintEnd_toStartOf="@+id/checkbox_clear_cache"
                app:layout_constraintStart_toEndOf="@+id/view9"
                app:layout_constraintTop_toTopOf="@+id/guideline501" />

            <CheckBox
                android:id="@+id/checkbox_clear_cache"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_15"
                android:button="@null"
                android:checked='@{browserVM.getPrefs("DATA_CLEAR_CACHE",false)}'
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline503"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.23" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline502"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline501"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.58" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline499"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.83" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline504"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.73" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_clear_history"
            style="@style/w_0_h_0"
            android:onClick='@{()->browserVM.putPrefs("DATA_CLEAR_HISTORY",!browserVM.getPrefs("DATA_CLEAR_HISTORY",false))}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,10:1.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_clear_cache">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/cr_alto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/appCompatImageView18"
                android:layout_width="@dimen/dp_6"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/cr_pumpkin"
                app:layout_constraintBottom_toTopOf="@+id/guideline497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline498" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView47"
                style="@style/header_text_view"
                android:layout_marginStart="@dimen/dp_20"
                android:text="@string/clear_history"
                app:layout_constraintBottom_toTopOf="@+id/guideline494"
                app:layout_constraintEnd_toStartOf="@+id/checkbox_clear_history"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView18"
                app:layout_constraintTop_toTopOf="@+id/guideline493" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/subheading_w0_h0"
                android:layout_marginStart="@dimen/dp_20"
                android:text="@string/clear_browsing_history"
                app:layout_constraintBottom_toTopOf="@+id/guideline495"
                app:layout_constraintEnd_toStartOf="@+id/checkbox_clear_history"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView18"
                app:layout_constraintTop_toTopOf="@+id/guideline496" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_clear_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_15"
                android:button="@null"
                android:checked='@{browserVM.getPrefs("DATA_CLEAR_HISTORY",false)}'
                android:clickable="false"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline493"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline494"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.52" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline496"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.58" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline495"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.83" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline498"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline497"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.72" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>