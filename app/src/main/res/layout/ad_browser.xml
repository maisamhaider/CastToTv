<?xml version="1.0"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/w_m_h_w">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/w_m_h_w"
        android:background="?attr/l_white_b_firefly">


        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/w_0_h_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,60:20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/ad_media"
                style="@style/w_0_h_0"
                app:layout_constraintBottom_toTopOf="@+id/guideline329"
                app:layout_constraintEnd_toStartOf="@+id/guideline335"
                app:layout_constraintStart_toStartOf="@+id/guideline334"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/textView3"
                style="@style/w_w_h_0"
                app:layout_constraintBottom_toTopOf="@+id/guideline331"
                app:layout_constraintEnd_toStartOf="@+id/ad_headline"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/guideline336"
                app:layout_constraintTop_toTopOf="@+id/guideline330"
                app:srcCompat="@drawable/ic_ad" />

            <TextView
                android:id="@+id/ad_headline"
                style="@style/header_text_view"
                android:layout_marginStart="@dimen/dp_5"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                app:layout_constraintBottom_toTopOf="@+id/guideline331"
                app:layout_constraintEnd_toStartOf="@+id/lineVa"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/guideline330"
                app:layout_constraintVertical_chainStyle="spread"
                tools:text="Facebook" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ad_body"
                style="@style/w_0_h_0"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:maxLength="80"
                android:maxLines="2"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="@dimen/dp_12"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/guideline333"
                app:layout_constraintEnd_toStartOf="@+id/lineVa"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/guideline336"
                app:layout_constraintTop_toTopOf="@+id/guideline332"
                tools:text="@string/lorem_ipsum" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ad_call_to_action"
                style="@style/w_0_h_0"
                android:background="@drawable/ripple_install_button"
                android:gravity="center"
                android:text="@string/install_2"
                android:textColor="@color/cr_white"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="@id/line2"
                app:layout_constraintEnd_toEndOf="@+id/ad_media"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline336"
                app:layout_constraintTop_toTopOf="@+id/line1"
                app:layout_constraintVertical_bias="0.0"
                app:textAllCaps="false" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/lineVa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.56" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline334"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.58" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline335"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.98" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline336"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.02" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline330"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.15" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline331"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline332"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.38" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.62" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline329"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.73" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.99" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
