<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="browserSettingsActivity"
            type="com.example.casttotv.ui.activities.browser.BrowserSettingsActivity" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.browser.BrowserSettingsActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:text="Browser Settings"
                android:textColor="@android:color/holo_red_dark" />

            <include
                android:id="@+id/include_browser_settings"
                layout="@layout/browser_settings_layout" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:text="Browser Settings"
                android:textColor="@android:color/holo_red_dark" />

            <include
                android:id="@+id/include_settings_layout"
                layout="@layout/app_settings_layout" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</layout>